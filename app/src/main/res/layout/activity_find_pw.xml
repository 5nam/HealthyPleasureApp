<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPwActivity">


    <android.widget.Button
        android:id="@+id/findPW_PW_button"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="17dp"
        android:background="#676767"
        android:backgroundTint="#676767"
        android:fontFamily="@font/nanumsquareroundr"
        android:text="비밀번호 찾기"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/findPW_login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/findPW_login_button"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="122dp"
        android:background="#676767"
        android:backgroundTint="#676767"
        android:fontFamily="@font/nanumsquareroundr"
        android:text="로그인 하러 가기"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/findPW_ID_Edit"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textWebEditText|text"
        app:layout_constraintBottom_toTopOf="@+id/findPW_Phone_Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findPW_textView" />

    <EditText
        android:id="@+id/findPW_Phone_Edit"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="전화번호"
        android:inputType="textWebPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findPW_ID_Edit" />

    <TextView
        android:id="@+id/findPW_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="230dp"
        android:layout_marginBottom="420dp"
        android:fontFamily="@font/nanumsquareroundb"
        android:text="PW 찾기"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>